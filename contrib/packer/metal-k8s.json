{
  "builders": [
    {
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/kickstart.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 300000,
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "RedHat_64",
      "hard_drive_discard": true,
      "hard_drive_interface": "sata",
      "hard_drive_nonrotational": true,
      "http_directory": "http",
      "iso_checksum": "bba314624956961a2ea31dd460cd860a77911c1e0a56e4820a12b9c5dad363f5",
      "iso_checksum_type": "sha256",
      "iso_checksum_url": "http://mirrors.atosworldline.com/public/centos/7/isos/x86_64/sha256sum.txt",
      "iso_interface": "sata",
      "iso_urls": [
        "CentOS-7-x86_64-Minimal-1708.iso",
        "http://mirrors.atosworldline.com/public/centos/7/isos/x86_64/CentOS-7-x86_64-Minimal-1708.iso"
      ],
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/halt -h -p",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "30m",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "8192"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "4"
        ]
      ],
      "virtualbox_version_file": ".vbox_version"
    }
  ],
  "post-processors": [
    {
      "type": "checksum"
    },
    {
      "compression_level": 9,
      "include": "box/",
      "type": "vagrant"
    },
    {
      "type": "manifest"
    }
  ],
  "provisioners": [
    {
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/install-virtualbox-guest-additions.sh",
      "type": "shell"
    },
    {
      "script": "scripts/configure-vagrant.sh",
      "type": "shell"
    },
    {
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/clean-empty-space.sh",
      "type": "shell"
    },
    {
      "extra_arguments": [
        "--become",
        "--extra-vars",
        "@ansible/extra-vars.yml"
      ],
      "groups": [
        "kube-master",
        "etcd",
        "kube-node",
        "k8s-cluster"
      ],
      "host_alias": "node1",
      "playbook_file": "../../metal-k8s.yml",
      "type": "ansible",
      "user": "vagrant"
    },
    {
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/create-temporary-admin-conf.sh",
      "type": "shell"
    },
    {
      "destination": "./admin.conf",
      "direction": "download",
      "source": "/home/vagrant/temporary-admin.conf",
      "type": "file"
    },
    {
      "script": "scripts/remove-temporary-admin-conf.sh",
      "type": "shell"
    }
  ]
}

