Vagrant.require_version ">= 2.0.0"

Vagrant.configure("2") do |config|
  config.vm.provider "virtualbox" do |vb|
    vb.cpus = {{user `cpus`}}
    vb.memory = {{user `memory`}}
    vb.name = "metal-k8s"

    vb.customize [
      "modifyvm", :id,
      "--rtcuseutc", "on",
      "--nictype1", "virtio",
      "--natdnshostresolver1", "on",
      "--natdnsproxy1", "on",
      "--pae", "on",
      "--acpi", "on",
      "--ioapic", "on",
      "--chipset", "ich9"
    ]
  end
end
